#!/usr/bin/with-contenv bashio
# Minimal service: logs the persona prompt and writes to /share, then sleeps.

message="$(bashio::config 'persona_prompt' 'You are CHARLES.')"
bashio::log.info "CHARLES persona prompt: ${message}"

# Touch an output file in /share to prove execution
echo "${message}" > /share/charles_persona.txt

# Stay alive to avoid restarts
exec sleep infinity
